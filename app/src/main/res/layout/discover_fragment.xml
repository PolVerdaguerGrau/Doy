<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/discoverFragmentProgressBar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:lottie_autoPlay="true"
        app:lottie_fileName="loading.json"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/discoverFragmentUnderConstructionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"
        android:text="@string/under_construction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/discoverFragmentProgressBar" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintEnd_toStartOf="@id/profileButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/discoverFragmentProgressBar" />


    <Button
        android:id="@+id/loginFlowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN FLOW SCREEN"
        app:layout_constraintEnd_toStartOf="@id/profileButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/discoverFragmentProgressBar" />

    <Button
        android:id="@+id/profileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERFIL"
        app:layout_constraintBottom_toBottomOf="@+id/loginFlowButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/loginFlowButton"
        app:layout_constraintTop_toTopOf="@id/loginFlowButton" />

    <Button
        android:id="@+id/categoryListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTA DE CATEGORÍAS"
        app:layout_constraintEnd_toStartOf="@id/categoryItemsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginFlowButton" />

    <Button
        android:id="@+id/categoryItemsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITEMS POR CATEGORÍA"
        app:layout_constraintBottom_toBottomOf="@+id/categoryListButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/categoryListButton"
        app:layout_constraintTop_toTopOf="@id/categoryListButton" />

    <Button
        android:id="@+id/detailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="DETALLE DEL SERVICIO"
        app:layout_constraintEnd_toStartOf="@id/chatsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryListButton" />

    <Button
        android:id="@+id/chatsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHATS"
        app:layout_constraintBottom_toBottomOf="@id/detailButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/detailButton"
        app:layout_constraintTop_toTopOf="@id/detailButton" />

    <Button
        android:id="@+id/addServiceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="AÑADIR SERVICIO"
        app:layout_constraintTop_toBottomOf="@id/detailButton"
        app:layout_constraintEnd_toEndOf="@id/chatsButton"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>