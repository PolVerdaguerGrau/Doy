<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/category_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/cardview_default_elevation"
    android:maxWidth="@dimen/category_max_width"
    android:maxHeight="@dimen/category_max_height"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/categoryImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/category_item_bg"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@id/category_container"
        app:layout_constraintEnd_toEndOf="@id/category_container"
        app:layout_constraintStart_toStartOf="@id/category_container"
        app:layout_constraintTop_toTopOf="@id/category_container"
        tools:src="@drawable/image_bg_small"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center"
        tools:text="ConversaciÃ³n"
        android:textColor="@android:color/white"
        android:textSize="@dimen/category_text_size"
        android:padding="@dimen/padding_small"
        app:layout_constraintBottom_toBottomOf="@id/category_container"
        app:layout_constraintEnd_toEndOf="@id/category_container"
        app:layout_constraintStart_toStartOf="@id/category_container"
        app:layout_constraintTop_toTopOf="@id/category_container" />

</androidx.constraintlayout.widget.ConstraintLayout>
