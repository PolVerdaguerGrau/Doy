<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App" parent="@android:style/Widget" />

    <style name="App.Intro">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="App.TitleL">
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
        <item name="android:textColor">@color/grayStrong</item>
    </style>

    <style name="App.Intro.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
